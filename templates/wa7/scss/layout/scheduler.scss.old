.weekscheduler {
    width: 100%;
    position: relative;
    margin-top: 2.5rem;
  }
  
  .weekscheduler-select {
    width: 100%;
    overflow: hidden;
    display: flex;
  }
  
  .weekscheduler-select-inner {
    flex: 1;
    width: 100%;
    overflow: hidden;
  }
  .weekscheduler-select-list{
    margin: 0;;
    transition: .5s transform ease-in-out;
    list-style-type: none;
  }
  .weekscheduler-select-list  > li {
    min-width: 100px;
    text-align: center;
    cursor: pointer;
  }
  
  .weekscheduler-select > .move {
    min-width: unset;
    height: 40px;
  }
  .weekscheduler-select > .move button{
    width: 40px;
    height: 40px;
    border: 0;
    background-color: white
  }
  .weekscheduler-select > .move button i{
    vertical-align: middle;
  }
  
  .weekscheduler-select-inner h3 {
    padding: .5rem 1rem;
    margin-bottom: 0;
  }
  .weekscheduler-select-inner h3.active {
    background-color: var(--color-fluoro-pink);
    color: white;
  }
  
  
  .weekscheduler-days {
    overflow-x: hidden;
    position: relative;
    width: 100%;
  }
  .weekscheduler-days-inner {
    display: flex;
    flex-direction: row;
    position: relative;
    transition: .5s left ease-in-out;
  }
  .weekscheduler-days-inner.movable {
    
  }
  .weekscheduler-days-inner .day {
    min-width: 300px;
    transition: .5s filter ease-in-out;
  }
  
  .weekscheduler-days-inner .day-item {
    display: flex;
    flex-direction: column;
    box-shadow: 0 2px 1px -1px #0003,0 1px 1px #00000024,0 1px 3px #0000001f;
    padding: 1rem;
    margin: 1rem;;
  }
  .weekscheduler-days-inner .day-item .day-item-params  {
    display: flex;
    flex-direction: column;
  }
  .weekscheduler-days-inner .day-item .day-item-param  {
    display: flex;
    flex-direction: row;
    color: var(--color-grey);
    font-size: .875em;
    line-height: 24px;
    margin-bottom: 0.5rem;
  }
  .weekscheduler-days-inner .day-item .day-item-param i {
    font-size: 16px;
    line-height: 24px;
    margin-right: 0.25rem;
    font-weight: bold;
  }
  
  .weekscheduler-days-inner .day-item .group {
    display: flex;
    flex-direction: column;
    flex: 1;
    height: 100%;
    justify-content: center;
  }
  
  .day-item .group > span, .day-item .group > span {
    display: block;
    padding: 0.5rem;
    min-height: 40px;
    border-radius: 5px;;
  }
  
  .day-item .group > span.orange {
    background-color: var(--color-fluoro-orange );
    color: white;
  }
  .day-item .group > span.bleu {
    background-color: var(--color-sky-blue);
    color: white;
  }
  .day-item .group > span.rouge {
    background-color: var(--color-red);
    color: white;
  }
  .day-item .group > span.marron {
    background-color: var(--color-brown);
    color: white;
  }
  .day-item .group > span.jaune {
    background-color: var(--color-yellow);
  }
  .day-item .group > span.violet {
    background-color: var(--color-purple-2);
    color: white;
  }
  .day-item .group > span.vert {
    background-color: var(--color-fluoro-green);
    color: white;
  }
  .day-item .group > span.rose {
    background-color: var(--color-fluoro-pink);
    color: white;
  }
  .day-item .group > span.gris {
    background-color: var(--color-grey);
    color: white;
  }
  .day-item .group > span.beige {
    background-color: beige;
  }
  .day-item .group > span.safran {
    background-color: var(--color-safran);
  }
  
  .day-item .group > .rouge {
    background-color: var(--color-red);
    color: white;
  }