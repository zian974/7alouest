<?xml version="1.0" encoding="utf-8"?>
<form>

    <fields name="filter">
        <field name="search" type="text" description="COM_STAGES_SEARCH_FILTER_SUBMIT"
               label="COM_USERS_FILTER_SEARCH_DESC"
               class="js-stools-search-string" />

        <field name="state"
               type="status"
               label="COM_STAGES_FILTER_STATE"
               description="COM_STAGES_FILTER_STATE_DESC"
               onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>
    </fields>

    <fields name="list">

       <field name="limit"
               type="limitbox"
               label="COM_STAGES_LIST_LIMIT"
               description="COM_STAGES_LIST_LIMIT_DESC"
               class="input-mini"
               default="25"
               onchange="this.form.submit();"
        />

    </fields>

</form>